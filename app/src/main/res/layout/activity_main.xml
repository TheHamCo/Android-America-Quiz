            android:text="@string/Q5"
            style="@style/QuestionText" />
    </LinearLayout>
    <RadioGroup
        style="@style/AnswerGroup">
        <RadioButton
            android:text="@string/Q5A1"
            style="@style/AnswerOption"/>
        <RadioButton
            android:text="@string/Q5A2"
            style="@style/AnswerOption"/>
        <RadioButton
            android:text="@string/Q5A3"
            style="@style/AnswerOption"/>
        <RadioButton
            android:text="@string/Q5A4"
