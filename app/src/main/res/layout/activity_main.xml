            android:text="@string/Q4"
            style="@style/QuestionText" />
    </LinearLayout>
    <RadioGroup
        style="@style/AnswerGroup">
        <RadioButton
            android:text="@string/Q4A1"
            style="@style/AnswerOption"/>
        <RadioButton
            android:text="@string/Q4A2"
            style="@style/AnswerOption"/>
        <RadioButton
            android:text="@string/Q4A3"
            style="@style/AnswerOption"/>
        <RadioButton
            android:text="@string/Q4A4"
            style="@style/AnswerOption"/>
    </RadioGroup>

    <View style="@style/Divider" />

    <!--Question 5-->
    <LinearLayout
        style="@style/QuestionLayout">
        <TextView
            android:text="@string/Q5num"
            style="@style/QuestionNum" />
